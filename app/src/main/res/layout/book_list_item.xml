<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_padding_global">

    <TextView
        android:id="@+id/authors_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/authors"
        />


    <TextView
        android:id="@+id/book_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/authors_text"
        android:layout_marginLeft="@dimen/text_from_title_margin"
        android:layout_marginStart="@dimen/text_from_title_margin"
        android:layout_toEndOf="@id/authors_text"
        android:layout_toRightOf="@id/authors_text"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_authors"
        android:text="@string/title" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/book_authors"
        android:layout_alignStart="@id/book_authors"
        android:layout_below="@id/book_authors"
        android:layout_toEndOf="@id/title_text"
        android:layout_toRightOf="@id/title_text"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>